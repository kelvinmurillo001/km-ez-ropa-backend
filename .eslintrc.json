{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/", "uploads/", "frontend/", "public/"],
  "rules": {
    "no-unused-vars": ["warn"],
    "no-useless-escape": "warn",
    "no-prototype-builtins": "warn"
  }
}
